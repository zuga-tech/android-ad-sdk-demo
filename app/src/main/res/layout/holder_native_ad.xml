<?xml version="1.0" encoding="utf-8"?>
<zuga.com.bainu.ad.sdk.view.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <net.studymongolian.mongollibrary.MongolTextView
                    android:id="@+id/tv_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:textColor="#1A81D3"
                    app:textSize="18sp" />
            </LinearLayout>

            <net.studymongolian.mongollibrary.MongolTextView
                android:id="@+id/tv_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:textColor="#000"
                app:textSize="18sp" />

        </LinearLayout>

        <zuga.com.bainu.ad.sdk.view.AdMediaView
            android:id="@+id/mv_media"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_media"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="gone" />

            <VideoView
                android:id="@+id/vv_media"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="gone" />
        </zuga.com.bainu.ad.sdk.view.AdMediaView>


    </LinearLayout>

</zuga.com.bainu.ad.sdk.view.NativeAdView>